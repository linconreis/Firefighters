<%= form_for @car, url: {controller: "cars", action: "create"} do |f| %>
	<% if @car.errors.any?  %>
		<div class="alert alert-danger" role="alert">
			<strong>Opss! Alguns erros foram encontrados</strong><br>
			<% @car.errors.messages.values.each do |value| %>
				<% value.each do |message| %>
					<%= message %>
				<% end %>
			<% end %>
		</div>
		
	<% end %>

	<div class="row">
		<div class="card-body">
	    	<h1 class="text-left">Nova Viatura</h1>
	  	</div>
	</div>
	<hr><br>

	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="form-group">
				<%= label_tag "Marca da viatura" %>
				<%= f.text_field :brand, class: "form-control form-control-sm" %>
			</div>
			<div class="form-group">
				<%= label_tag "Nome da viatura" %>
				<%= f.text_field :name, class: "form-control form-control-sm" %>
			</div>
			<div class="form-group">
				<%= label_tag "Placa" %>
				<%= f.text_field :board, class: "form-control form-control-sm" %>
			</div>
			<div class="form-group">
				<%= label_tag "Ano da viatura" %>
				<%= f.number_field :year, class: "form-control form-control-sm" %>
			</div>
			<div class="form-group">
				<%= label_tag "Quilometragem" %>
				<%= f.number_field :mileage, class: "form-control form-control-sm" %>
			</div class="form-group">
				<%= f.submit "Cadastrar", class: "btn btn-default" %>
				<%= link_to "Voltar", {controller: "cars", action: "index"}, class: "btn btn-link" %>
			<div>
				
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
<% end %>
<div class="row">
  <div class="card-body">
    <h1 class="text-center">Bombeiros da Corporação</h1>
  </div>
</div>
<hr><br>

<div class="row">
	<div class="col-sm-12">
		<%= link_to "Novo Bombeiro", {controller: "firefighters", action: "new"}, class: "btn btn-default" %>
	</div>
</div><br>

<div class="row">
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Sobrenome</th>
					<th>Telefone</th>
					<th>Visualizar</th>
					<th>Editar</th>
					<th>Excluir</th>
				</tr>
			</thead>
			<% @firefighters.each do |firefighter| %>
				<tr>
					<td><%= firefighter.name %></td>
					<td><%= firefighter.last_name %></td>
					<td><%= firefighter.phone %></td>
					<td><%= link_to "Visualizar", firefighter_path(firefighter) %></td>
					<td><%= link_to "Editar", edit_firefighter_path(firefighter) %></td>
					<td><%= link_to "Apagar", firefighter, method: :delete, data: {confirm: "Tem certeza?"} %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>
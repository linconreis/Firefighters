<div class="row">
   <div class="card-body">
      <h1 class="text-left">Detalhes da Ausência Nº <%= @absence.id %></h1>
   </div>
</div>
<hr><br>


<div class="row">
  <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <table>
        <thead>
          <tr>
            <td><strong>Data da saída</strong></td>
            <td><%= format_date(@absence.date_out) %></td>
            <td>&nbsp&nbsp&nbsp</td>
            <td><strong>Horário da saída</strong></td>
            <td><%= format_time(@absence.exit_time) %></td>
            <td>&nbsp&nbsp&nbsp</td>
            <td><strong>Km de saída</strong></td></td>
            <td><%= @absence.mileage_output %></td>
          </tr>
          <tr>
            <td><strong>Data do retorno</strong></td>
            <td><%= format_date(@absence.return_date) %></td>
            <td>&nbsp&nbsp&nbsp</td>
            <td><strong>Horário do retorno</strong></td>
            <td><%= format_time(@absence.return_time) %></td>
            <td>&nbsp&nbsp&nbsp</td>
            <td><strong>Km de retorno</strong></td>
            <td><%= @absence.mileage_return %></td>
          </tr>
        </thead>
      </table>
    </div>
  <div class="col-sm-2"></div>
</div><hr>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h4>Justificativa:</h4>
    <p><%= @absence.justification %></p>
  </div>
  <div class="col-sm-2"></div>
</div><hr>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h4>Bombeiros envolvidos</h4>
      <% @absence.firefighters.each do |firefighter| %>
        <%= firefighter.name %> <%= firefighter.last_name %> - 
      <% end %>
  </div>
  <div class="col-sm-2"></div>
</div><hr>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <h4>Veículos envolvidos</h4>
      <% @absence.cars.each do |car| %>
        <%= car.name %> (<%= car.number%>) - 
      <% end %>
  </div>
  <div class="col-sm-2"></div>
</div>

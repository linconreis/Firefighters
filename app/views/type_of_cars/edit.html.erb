<%= form_for @type_of_car, url: {controller: "type_of_cars", action: "update"} do |f| %>
		
	<% if @type_of_car.errors.any? %>
		<div class="alert alert-danger" role="alert">
			<strong>Opss! Alguns erros foram encontrados</strong><br>
			<% @type_of_car.errors.messages.values.each do |value| %>
				<% value.each do |message| %>
					<%= message %>
				<% end %>
			<% end %>
		</div>
	<% end %>

	<div class="row">
		<div class="card-body">
			<h1 class="text-left">Atualizar Tipo de Viatura</h1>
		</div>
	</div>
	<hr><br>

	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-8">
			<div class="form-group">
				<%= label_tag "Tipo da viatura" %>
				<%= f.text_field :name, :required => true, placeholder: "Caminhão Tanque - Moto - Ambulância...", class: "form-control form-control-sm" %>
			</div>
			<div class="form-group">
				<%= f.submit "Atualizar", class: "btn btn-default" %>
				<%= link_to "Voltar", controller: "type_of_cars", action: "index" %>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>

<% end %>
